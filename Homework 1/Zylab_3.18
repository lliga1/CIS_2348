import math
wall_height = int(input("Enter wall height (feet):\n"))
wall_width = int(input("Enter wall width (feet):\n"))
wall_area = wall_height * wall_width
print("Wall area:", str(wall_area),'square feet')

paint_need = wall_area/350
print("Paint needed: {:.2f} gallons".format(paint_need))

can_need = math.ceil(paint_need)
print("Cans needed:", can_need,'can(s)')
print('')

user_color = str(input("Choose a color to paint the wall:\n"))
if user_color =='red':
    print("Cost of purchasing red paint: $35")
elif user_color =='blue':
    print("Cost of purchasing blue paint: $25")
elif user_color =='green':
    print("Cost of purchasing green paint: $23")
